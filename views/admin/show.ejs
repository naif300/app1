<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Textual inputs</h4>
              
              <form   method="post"     action="/show">
                <div class="mb-3 row">
                    <label for="title" class="col-md-2 col-form-label">title</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text"   name="title">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="tag" class="col-md-2 col-form-label">tag</label>
                    <div class="col-md-10">
                        <input class="form-control" type="search"  name="tag"
                            id="tag">
                    </div>
                </div>
               
                <div class="mb-3 row">
                    <label for="description" class="col-md-2 col-form-label">descrption</label>
                    <div class="col-md-10">
                        <textarea  class="form-control" type="text" name="descrption"   placeholder="description"></textarea>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="image" class="col-md-2 col-form-label">image</label>
                    <div class="col-md-10">
                        <input class="form-control" type="file" name="image"   placeholder="Enter image">
                    </div>
                </div>
    
              <button class="btn btn-primary" type="submit" >Save images</button>
            </form>

            </div>
        </div>
    </div> <!-- end col -->
</div>

<%- contentFor('FooterJs') %>

