<!-- end page title -->

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Textual inputs</h4>
              
              <form   method="post"     action="/articles">
                <div class="mb-3 row">
                    <label for="title" class="col-md-2 col-form-label">title</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text"   name="title">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="price" class="col-md-2 col-form-label">short_disc</label>
                    <div class="col-md-10">
                        <input class="form-control" type="search"  name="short_disc"
                            id="short_disc">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="price" class="col-md-2 col-form-label">full_text</label>
                    <div class="col-md-10">
                        <input class="form-control" type="search"  name="full_text"
                            id="full_text">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="image" class="col-md-2 col-form-label">image</label>
                    <div class="col-md-10">
                        <input class="form-control" type="file" name="image"   placeholder="Enter image">
                    </div>
                </div>
                 
    
              <button class="btn btn-primary" type="submit" >Save articles</button>
            </form>
         
            </div>
        </div>
    </div> <!-- end col -->
</div>
 
 

<%- contentFor('FooterJs') %>

